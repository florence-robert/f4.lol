---
import '~/base.css';
import ThemeChangeScript from '~/components/scripts/theme-change.script.astro';
import CalScript from '~/components/scripts/cal.script.astro';
import Header from '~/components/Header.astro';
import Footer from '~/components/Footer.astro';

import { SITE } from '~/config.mjs';

const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="h-full" dir={textDirection}>
  <head>
    <style>
      html {
        font-size: 1rem;
        font-size: clamp(1.5rem, -4vw + 1rem, 4rem);
      }
    </style>
    <ThemeChangeScript />
    <CalScript />
    <script src="https://kit.fontawesome.com/593a0def8f.js" crossorigin="anonymous"></script>
  </head>

  <body class="h-full flex flex-col antialiased tracking-tight">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
